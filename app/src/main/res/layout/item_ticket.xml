<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_ticket_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_ticket_options"
        android:layout_toStartOf="@+id/btn_ticket_options"
        android:layout_alignParentLeft="true"
        android:text="Client name"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/tv_ticket_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_ticket_options"
        android:layout_toStartOf="@+id/btn_ticket_options"
        android:text="Address"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@id/tv_ticket_client_name"/>

    <ImageView
        android:id="@+id/btn_ticket_options"
        style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_more_vert_24"
        android:layout_alignParentRight="true"
        android:clickable="true"/>

</RelativeLayout>